{
  "manifest_version": 2,

  "name": "FB messages",
  "description": "Just reads facebook messages",
  "version": "1.0",
  "permissions": [ "cookies", "http://*/*", "https://*/*" ],
  "content_scripts": [{
    "matches": ["http://*/*","https://*/*"],
    "js": ["jquery.js", "read.js"]
  }],
  "background": {
    "page":"background.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
