{
  "manifest_version": 2,

  "name": "Hearts",
  "description": "Love lies at your fingertips",
  "version": "1.0",
  "permissions": [ "cookies","activeTab", "*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["jquery.js", "read.js"]
    }
  ],
  "background": {
    "scripts": ["jquery.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  }
}
