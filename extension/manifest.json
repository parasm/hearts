{
  "manifest_version": 2,

  "name": "Hearts",
  "description": "The power of love lies at your hands",
  "version": "1.0",
  "permissions": [ "cookies", "*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["jquery.js", "read.js"]
    }
  ],
  "background": {
    "page":"background.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["jquery.js", "read.js"]

}
